{
  "compilerOptions": {
    "target": "es2017",                          
    "module": "commonjs",                     
    "lib": ["es6"],                             
    "allowJs": true,                       
    "outDir": "./dist",                        
    "rootDir": "./src",                       
    "removeComments": true,
    "strict": true,     
    "typeRoots": [
      "./node_modules/@types"
    ],                       
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,                     
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@entities/*": ["./src/entities/*"],
      "@useCases/*": ["./src/useCases/*"]
    }
  },
  "include": [
    "src/**/*"
  ]
}
